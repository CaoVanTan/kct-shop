<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_kct_topping_category" model="ir.actions.act_window">
        <field name="name">Danh mục topping</field>
        <field name="res_model">kct.product.topping</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo mới danh mục topping!
            </p>
        </field>
    </record>

    <record id="action_kct_topping_category_tree" model="ir.ui.view">
        <field name="name">kct.product.topping.tree</field>
        <field name="model">kct.product.topping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_kct_topping_category" name="Danh mục topping" sequence="2" parent="menu_kct_category"
              action="action_kct_topping_category"/>
</odoo>

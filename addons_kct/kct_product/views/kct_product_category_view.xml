<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_kct_product_category" model="ir.actions.act_window">
        <field name="name">Danh mục sản phẩm</field>
        <field name="res_model">kct.product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo mới danh mục sản phẩm!
            </p>
        </field>
    </record>

    <record id="action_kct_product_category_tree" model="ir.ui.view">
        <field name="name">kct.product.category.tree</field>
        <field name="model">kct.product.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_kct_product_category" name="Danh mục sản phẩm" sequence="0" parent="menu_kct_category"
              action="action_kct_product_category"/>
</odoo>
